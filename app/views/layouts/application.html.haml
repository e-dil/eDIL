!!! 5
%html{lang: :en}
  %head
    %meta{charset: "utf-8"}
    %title Dictionary of the Irish Language
    = csrf_meta_tags
    :plain
      <!--[if lt IE 9]>
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
      <![endif]-->
    = stylesheet_link_tag 'application', media: :all
    %link{href: "images/favicon.ico",                   rel: "shortcut icon"}
    %link{href: "images/apple-touch-icon.png",          rel: "apple-touch-icon"}
    %link{href: "images/apple-touch-icon-72x72.png",    rel: "apple-touch-icon", sizes: "72x72"}
    %link{href: "images/apple-touch-icon-114x114.png",  rel: "apple-touch-icon", sizes: "114x114"}
  %body
    %header
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            %a.btn.btn-navbar{'data-target' => '.nav-collapse', 'data-toggle' => 'collapse'}
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            = link_to 'Dictionary of the Irish Language', root_url, class: :brand
            %ul.nav
              %li= link_to 'About', page_path('about')
              %li= link_to 'Search', '/'
              %li= link_to 'Browse', browse_path
              %li= link_to 'Bibliography', bibls_url
              %li= link_to 'Contact', page_path('contact')
            = form_tag 'search', class: 'navbar-search pull-right' do
              %input.search-query.typeahead{:type => :text, :placeholder => "Search", :name => :q, 'data-provide' => :typeahead, 'data-items' => 7, 'data-source' => Entry.select(:orth).map(&:orth)}

    #site.container.container-fluid
      = yield
    %footer
      %p= raw "Copyright &copy; 2012 Queen's University, Belfast.  All Rights Reserved."
    = javascript_include_tag 'application'
